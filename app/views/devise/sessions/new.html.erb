<div class="forms-devise">

  <%# Visible %>
  <div class="form-toggle">
    <h2>Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :login,
                    label: false,
                    required: true,
                    placeholder: 'Username or email' %>
        <%= f.input :password,
                    label: false,
                    required: true,
                    placeholder: 'Password' %>
      </div>

      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

      <div class="form-actions">
        <div class="shared-devise">
          <%= link_to 'Sign up', new_user_registration_path %>
          <a href="" class="form-toggle-btn">Help</a>
        </div>
        <%= f.button :submit, "Log in", class: 'btns btn-action' %>
      </div>

    <% end %>
  </div>

  <%# Hidden %>
  <div class="form-toggle" style="display: none;">
    <h2>Got stuck?</h2>
    <h6>Here's some helpul links</h6>
    <div class="shared-devise help-links">
      <%= render "devise/shared/links" %>
    </div>
      <a href="" class="form-toggle-btn">Back</a>
  </div>

</div>
