<div class="row justify-content-around">

  <% @recipes.each do |recipe| %>
    <%= link_to recipe_path(recipe), class: 'links-remove' do %>
      <div class="col-sm-12 col-md-6 col-lg-4 col-xl-3">
      <div class="card-container">
            <div class="title">
              <h6><%= recipe.name %></h6>
            </div>
            <div class="macros">
              <span><%= recipe.kcal %><small>Kcal</small></span>
              <span><%= recipe.carbs %></small>g C</span>
              <span><%= recipe.total_fats %></small>g F</span>
              <span><%= recipe.protein %></small>g P</span>
            </div>
        </div>
      </div>
    <% end %>
  <% end %>

</div>