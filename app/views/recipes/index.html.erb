<div class="row justify-content-around">
  <% @recipes.each do |recipe| %>
    <%= link_to recipe_path(recipe), class: 'links-remove' do %>
    <div class="col-sm-12 col-md-6 col-lg-4 col-xl-3">
      <div class="card-container">
        <div class="title">
          <h6><%= recipe.name %></h6>
        </div>
        <div class="macros">
          <span><%= format_value(recipe.kcal) %><small>Kcal</small></span>
          <span><%= format_value(recipe.carbs) %></small>g C</span>
          <span><%= format_value(recipe.total_fat) %></small>g F</span>
          <span><%= format_value(recipe.protein) %></small>g P</span>
        </div>
      </div>
    </div>
    <% end %>
  <% end %>
</div>