<%= simple_form_for @recipe do |f| %>
<%= f.input :instructions,
    required: true,
    label: false,
    placeholder: 'ex: Mix all ingredients, season with olive oil and serve.' %>
  <div class="float-right">
    <%= link_to 'Back', new_recipe_dose_path(@recipe), class: 'btn-back links' %>
    <%= f.button :submit, 'Done!', method: :patch, class: 'btn-action links' %>
  </div>
<% end %>